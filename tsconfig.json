{
    "compilerOptions": {
        "module": "commonjs", //Specifies the module code generation method. Node uses commonjs.
        "esModuleInterop": true,
        "target": "ES6", //Specifies the output language level.
        "moduleResolution": "node", //This helps the compiler figure out what an import refers to. The Valuenode mimics the Node module resolution mechanism
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist" //This is the location to output .js files after transpilation. We save it as dist.
    },
    "lib": [
        "es2015"
    ]
}


//Cmd to create tsconfig.json - tsc --init